<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .album-card {
            transition: transform 0.3s;
            margin-bottom: 20px;
        }

            .album-card:hover {
                transform: translateY(-5px);
            }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .album-header {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('https://via.placeholder.com/1920x500?text=Album+Background');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 5rem 0;
            margin-bottom: 3rem;
        }

        .album-cover {
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s;
        }

        .album-cover:hover {
               transform: scale(1.03);
        }

        .track-list {
            margin-top: 2rem;
        }

        .track-item {
            padding: 1rem;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
        }

            .track-item:hover {
                background-color: #f8f9fa;
            }

        .track-number {
            font-weight: bold;
            margin-right: 1.5rem;
            min-width: 30px;
            text-align: center;
        }

        .track-info {
            flex-grow: 1;
        }

        .track-duration {
            color: #6c757d;
            margin: 0 1.5rem;
        }

        .audio-player {
            flex-grow: 1;
            max-width: 400px;
        }

        .album-info {
            margin-top: 2rem;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Music</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Стартовая страница</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Album" asp-action="Index">Альбомы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Song" asp-action="Index">Песни</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Artist" asp-action="CreateNewArtist">Добавить артиста</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Music - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
