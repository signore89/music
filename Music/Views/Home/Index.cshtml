@model List<Artist>
<div class="container py-5">
    <h1 class="text-center mb-5">Артисты</h1>

    <div class="row">

        @foreach (var artist in Model)
        {
            <div class="col-md-4 col-lg-3">
                <div class="card w-75">
                    <img src="@artist.UrlImg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@artist.Name</h5>
                        <a asp-controller="Artists" asp-action="Details" asp-route-id="@artist.Id"
                           class="btn btn-outline-primary btn-sm">Перейти</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>