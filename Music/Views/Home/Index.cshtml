@model List<Artist>
<div class="container">
    <div class="row">
            @foreach (var artist in Model)
            {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                <div class="card artist-card h-100 shadow-sm">
                    <img src="@artist.UrlImg" class="card-img-top" alt="@artist.Name" style="height: 250px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@artist.Name</h5>
                            <a asp-controller="Artists" asp-action="Details" asp-route-id="@artist.Id"
                           class="btn btn-outline-primary mt-3">Перейти</a>
                    </div>
                </div>
            </div>
            }
    </div>
</div>