
<body>
    @model Artist

    @{
        ViewData["Title"] = "Добавление нового артиста";
    }

    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>
        <hr />

        <form asp-action="Create" id="artistForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Информация об артисте -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4>Информация об артисте</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Имя</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlImg" class="control-label">URL адрес картинки артиста</label>
                        <input asp-for="UrlImg" class="form-control" />
                    </div>
                </div>
            </div>

            <!-- Информация о треке -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4>Композиции</h4>
                    <button type="button" id="addTrackBtn" class="btn btn-sm btn-light">
                        <i class="fas fa-plus"></i> Добавить
                    </button>
                </div>
                <div class="card-body" id="tracksContainer">
                    <!-- Tracks will be added here -->
                </div>
            </div>

            <!-- Информация об альбомах -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4>Альбомы</h4>
                    <button type="button" id="addAlbumBtn" class="btn btn-sm btn-light">
                        <i class="fas fa-plus"></i> Add Album
                    </button>
                </div>
                <div class="card-body" id="albumsContainer">
                    <!-- Albums will be added here -->
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Сохранить
                </button>
                @* <a asp-action="GetArtistAsync" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад
                </a> *@
            </div>
        </form>
    </div>

    <script type="text/template" id="trackTemplate">
        <div class="track-item card mb-3">
            <div class="card-body">
                <input type="hidden" name="Tracks.Index" value="--INDEX--" />
                <div class="form-group">
                    <label>Название трека</label>
                    <input name="Tracks[--INDEX--].Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>URL трека</label>
                    <input name="Tracks[--INDEX--].UrlSong" class="form-control" required />
                </div>
                <button type="button" class="btn btn-danger btn-sm remove-track">
                    <i class="fas fa-trash"></i> Удалить трек
                </button>
            </div>
        </div>
    </script>

</body>
