
<body>
    @model Artist

    @{
        ViewData["Title"] = "Изменить артиста";
    }

    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>
        <hr />

        <form asp-action="Save" id="artistForm">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />
            <!-- Информация об артисте -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4>Информация об артисте</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Имя</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UrlImg" class="control-label">URL адрес картинки артиста</label>
                        <input asp-for="UrlImg" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Сохранить
                </button>
                @* <a asp-action="GetArtistAsync" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад
                </a> *@
            </div>
        </form>
    </div>

</body>
